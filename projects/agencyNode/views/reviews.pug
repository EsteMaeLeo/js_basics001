extends ./layout/index

block content
    main.container.mt-5 
        h1.text-center.mt-5 #{page}
        blockquote.text-center Client Reviews
        .row.testimoniales 
            each review in revPage
                .col-md-6.col-lg-4.mb-4
                    .card
                        .card-body
                            blockquote.blockquote
                            p.mb-0
                                | #{review.message}
                            footer.blockquote-footer
                                | #{review.name}
        .row 

        h2.d-blockw-100.text-center Add Rewiew 

        if (errorLog)
            each log in errorLog
                .alert.col.alert-danger.text-center= log.message

        .row-justify-concent-center.col
            .col-md-8
                form(action="/reviews" method="POST")
                    .form-group 
                        label(for="name") Name
                        input#name(type="text" placeholder="Your name" name="name" class="form-control" value= name)
                    .form-group 
                        label(for="email") Email
                        input#email(type="text" placeholder="Your email" name="email" class="form-control" value= email)
                    .form-group 
                        label(for="message") Message
                        textarea#message(class="form-control" name="message" placeholder="Your message" rows=3)= message    

                    input.btn.btn-success.btn-block(type="submit")                   